{
  "$schema": "https://schema.tauri.app/config/2.0",
  "identifier": "default",
  "description": "Default permissions for Mini Photo Editor",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "dialog:allow-save",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$HOME/**" }
      ]
    }
  ]
}
