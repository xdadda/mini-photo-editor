{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Mini Photo Editor",
  "identifier": "com.rexxjs.mini-photo-editor",
  "version": "0.1.1",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Mini Photo Editor",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
